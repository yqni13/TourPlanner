<UserControl x:Class="TourPlanner.ViewComponents.TourMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.ViewComponents"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="80">    
    <Menu >
        <MenuItem Header="_File">
            <MenuItem Header="_PDF-Report" Command="{Binding PDFReportCommand}"/>
            <MenuItem Header="_PDF-Summary" Command="{Binding PDFSummaryCommand}"/>
            <MenuItem Header="_Import" Command="{Binding Import}"/>
            <MenuItem Header="_Export" Command="{Binding Export}"/>
            <Separator />            
        </MenuItem>
        <MenuItem Header="_Edit">            
        </MenuItem>
        <MenuItem Header="_Options">
        </MenuItem>
    </Menu>

</UserControl>
