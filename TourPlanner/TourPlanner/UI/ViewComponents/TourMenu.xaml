<UserControl x:Class="TourPlanner.UI.ViewComponents.TourMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.UI.ViewComponents"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="80">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical">
            <Button FontSize="16" Grid.Column="0" Margin="1" >File</Button>
            <Button FontSize="16" Grid.Column="0" Margin="1" >Edit</Button>
            <Button FontSize="16" Grid.Column="0" Margin="1" >Options</Button>
            <Button FontSize="16" Grid.Column="0" Margin="1" >Help</Button>
        </StackPanel>
    </Grid>

</UserControl>
